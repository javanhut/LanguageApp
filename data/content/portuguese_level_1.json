      "items": [
        { "id": "l1_1", "type": "mcq", "prompt": "Select the correct article: ___ livro (book)", "choices": ["o", "a", "os", "as"], "answer": "o", "newWord": "o", "explanation": "Livro (book) is masculine, so we use 'o'" },
        { "id": "l1_2", "type": "mcq", "prompt": "Select the correct article: ___ mesa (table)", "choices": ["o", "a", "os", "as"], "answer": "a", "newWord": "a", "explanation": "Mesa (table) is feminine, so we use 'a'" },
        { "id": "l1_3", "type": "input", "prompt": "the books (plural)", "answer": ["os livros"], "newWord": "os", "explanation": "Plural masculine: os livros (the books)" },
        { "id": "l1_4", "type": "input", "prompt": "the tables (plural)", "answer": ["as mesas"], "newWord": "as", "explanation": "Plural feminine: as mesas (the tables)" },
        { "id": "l1_5", "type": "input", "prompt": "a book (indefinite)", "answer": ["um livro"], "newWord": "um", "explanation": "Indefinite masculine: um livro (a book)" },
