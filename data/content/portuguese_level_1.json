        { "id": "l1_8", "type": "input", "prompt": "some tables (plural indefinite)", "answer": ["umas mesas"], "newWord": "umas", "explanation": "Plural indefinite feminine: umas mesas" },
        { "id": "l1_9", "type": "input", "prompt": "book", "answer": ["livro"], "newWord": "livro", "explanation": "livro = book (masculine noun)" },
        { "id": "l1_10", "type": "input", "prompt": "table", "answer": ["mesa"], "newWord": "mesa", "explanation": "mesa = table (feminine noun)" }
